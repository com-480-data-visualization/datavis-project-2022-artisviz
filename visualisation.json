{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "An interactive scatter plot of global health statistics by country and year.",
    "data": {"url": "https://raw.githubusercontent.com/com-480-data-visualization/datavis-project-2022-artisviz/main/Milestone3/data/csvjson.json"},
    "width": 800,
    "height": 500,
    "params": [{
                "name": "measure",
                "value": "temp_max",
                "bind": {
                    "input": "select",
                    "options": [null,
                        "Poverty rate (no unit)","GDP per hours worked (USD/hour)","Income Inequality (no unit)","Employment Rate (no unit)"
                    ]
                }
              }],
    "layer": [
      {
        "transform": [
          {"filter": {"field": "country", "equal": "AUT"}},
          {"filter": {"param": "year"}}
        ],
        "mark": {
          "type": "text",
          "fontSize": 100,
          "x": 400,
          "y": 150,
          "opacity": 0.06
        },
        "encoding": {"text": {"field": "Year"}, "color": {"field": "country", "scale": {"scheme": "category20b"}}}
      },
      {
        "encoding": {
          "x": {
            "field": "GDP per hours worked (USD/hour)",
            "type": "quantitative",
            "scale": {"zero": false, "domainMax":110},
            "axis": {"tickCount": 10, "title": "GDP per hours worked (USD/hour)"}
          },
          "y": {
            "field": "Income Inequality (no unit)",
            "type": "quantitative",
            "scale": {"zero": false},
            "axis": {"tickCount": 10, "title": "Income Inequality (no unit)"}
          }
        },
        "layer": [
          {
            "mark": {
              "type": "line",
              "size": 4,
              "strokeCap": "round"
            },
            "encoding": {
              "detail": {"field": "country"},
              "order": {"field": "Year"},
              "opacity": {
                "condition": {
                  "test": {"or": [
                    {"param": "hovered", "empty": false},
                    {"param": "clicked", "empty": false}
                  ]},
                  "value": 0.8
                },
                "value": 0
              },
              "color": {"field": "country", "title": "Region","scale": {"scheme": "category20b"}}
            }
          },
          {
            "params": [{
              "name": "grid",
              "select": "interval",
              "bind": "scales"
            },
              {
                "name": "year",
                "value": [{"Year": 1987}],
                "select": {
                  "type": "point",
                  "fields": ["Year"]
                },
                "bind": {
                  "name": "Year",
                  "input": "range",
                  "min": 1987, "max": 2021, "step": 1
                }
              },
              {
                "name": "hovered",
                "select": {
                  "type": "point",
                  "fields": ["country"],
                  "toggle": false,
                  "on": "mouseover"
                }
              },
              {
                "name": "clicked",
                "select": {"type": "point", "fields": ["country"]}
              }
            ],
            "transform": [{"filter": {"param": "year"}}],
            "mark": {"type": "circle", "size": 100, "opacity": 0.9},
            "encoding": {"color": {"field": "country"}}
          },
          {
            "transform": [
              {
                "filter": {
                  "and": [
                    {"param": "year"},
                    {"or": [
                      {"param": "clicked", "empty": false},
                      {"param": "hovered", "empty": false}
                    ]}
                  ]
                }
              }
            ],
            "mark": {
              "type": "text",
              "yOffset": -12,
              "fontSize": 12,
              "fontWeight": "bold"
            },
            "encoding": {
              "text": {"field": "country"},
              "color": {"field": "country", "scale": {"scheme": "category20b"}}
            }
          },
          {
            "transform": [
              {"filter": {"param": "hovered", "empty": false}},
              {"filter": {"not": {"param": "year"}}}
            ],
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "yOffset": -12,
                  "fontSize": 12
                  },
                "encoding": {"text": {"field": "Year"}, "color" : {"field": "country","scale": {"scheme": "category20b"}}}},
              {"mark": {"type": "circle", "color": "gray"}}
            ]
          }
        ]
      }
    ]
  }
  